@model GISModel.Entidades.PCMSO.REL_RiscosExames



@{
    ViewBag.Title = "Exames por Riscos";
}

<div id="formCadastroExRiscos">
    <div class="row">
        <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">
            <div class="page-header">
                <h1>
                    Exames po Riscos
                </h1>
            </div>
        </div>
    </div>
    @{
        Html.RenderPartial("_MensagensDeRetorno");
    }


    <div>
        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <tbody>
                <tr id="linha">

                    <td>
                        @using (Ajax.BeginForm("Cadastrar", "REL_RiscosExames", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginCadastrarExRiscos", OnSuccess = "OnSuccessCadastrarExRiscos", }, new { @id = "formCadastroExRiscos", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()


                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TipoExame, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
                                    <div class="col-xs-12 col-sm-12">
                                        @Html.EnumDropDownListFor(model => model.TipoExame, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                                        @Html.ValidationMessageFor(model => model.TipoExame, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ukPerigo, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
                                    <div class="col-xs-12 col-sm-12">
                                        @Html.DropDownListFor(model => model.ukPerigo, new SelectList(ViewBag.Perigo, "UniqueKey", "Descricao"), "Selecione um Perigo", new { @class = "chosen-select form-control tag-input-style", @id = "ddlPerigo", @autocomplete = "on" })
                                        @Html.ValidationMessageFor(model => model.ukPerigo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ukExame, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
                                    <div class="col-xs-12 col-sm-12">
                                        @Html.DropDownListFor(model => model.ukExame, new SelectList(ViewBag.Exame, "UniqueKey", "Nome"), "Selecione um Exame", new { @class = "chosen-select form-control tag-input-style", @id = "ddlPerigo", @autocomplete = "on" })
                                        @Html.ValidationMessageFor(model => model.ukExame, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Obrigariedade, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
                                    <div class="col-xs-12 col-sm-12">
                                        @Html.EnumDropDownListFor(model => model.Obrigariedade,"Selecione...", new { @class = "chosen-select form-control tag-input-style", @id = "ddlPerigo", @autocomplete = "on" })
                                        @Html.ValidationMessageFor(model => model.Obrigariedade, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                            <br/>


                            <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
                                <button class="btn btn-info" id="btnSalvar" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Salvar
                                </button>

                            </div>

                        }
                    </td>
                </tr>


            </tbody>
        </table>
    </div>


</div>


@section Scripts {


    <script src="~/Scripts/Custom/RiscoExame/Novo.js"></script>


}

