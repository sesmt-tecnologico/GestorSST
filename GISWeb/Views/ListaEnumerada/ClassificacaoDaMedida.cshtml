@using GISModel.DTO
@model List<EntidadeBase>
@{
    ViewBag.Title = "ClassificacaoDaMedida";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Lista enumerada: <strong>Classificação de Medidas</strong>
        </h3>
    </div>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning">
        <strong>
            <i class="ace-icon fa fa-meh-o"></i>
            Oops!
        </strong>

        Nenhum item da lista enumerada encontrada na base de dados.
        <br>
    </div>
}
else
{
    <div class="row">
        <div class="col-sm-12 col-xs-12">

            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th width="89px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (EntidadeBase item in Model)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td class="center">
                                <div class="action-buttons">
                                    <a class="blue CustomTooltip" href="#" title="Arquivos anexados" onclick="OnClickBuscarArquivos('@item.id');" data-target="#modalArquivos" data-toggle="modal" data-backdrop="static" data-keyboard="false">
                                        <i class="ace-icon fa fa-cloud blue bigger-125"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
    <script src="~/Scripts/Custom/ListaEnumerada/Listagem.js"></script>

    <script type="text/javascript">

        jQuery(function ($)
        {
            AplicajQdataTable("dynamic-table", [null, { "bSortable": false }], false, 20);
        });

    </script>
}