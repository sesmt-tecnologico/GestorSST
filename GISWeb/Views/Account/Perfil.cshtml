@model AutenticacaoModel
@using GISModel.DTO.Conta
@using GISModel.DTO.Permissoes


@{
    ViewBag.Title = "Meus Dados";
}

<div class="page-header">
    <h1 class="green">
        Informações sobre a conta
        <img id="perfilLoading" src="~/Images/slack_loading.gif" style="float: right; padding-top: 4px; display:none" />
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div id="user-profile-1" class="user-profile row">
                    <div class="col-xs-12 col-sm-3 center">
                        <div>
                            <div class="space-10"></div>

                            <div id="imagemPerfil" class="profile-picture">
                                <ul class="ace-thumbnails clearfix">
                                    <li>
                                        <a href="#" class="lnkAtualizarFoto" data-target="#modalAtualizarFoto" data-toggle="modal" data-backdrop="static" data-keyboard="false">
                                            <img id="avatar" class="editable img-responsive" src="@Url.Action("FotoPerfil", "Account", new { login = Model.Login })" />

                                            <div class="text">
                                                <div class="inner">Clique para atualizar</div>
                                            </div>
                                        </a>

                                        <div class="tools tools-bottom">
                                            <a href="#">
                                                <i class="ace-icon fa fa-times red"></i>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <div class="space-4"></div>

                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-9" data-ukusuario="@Model.UniqueKey">
                        <div class="space-12"></div>

                        <div class="profile-user-info profile-user-info-striped">
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Login </div>

                                <div class="profile-info-value">
                                    <span class="editable">@Model.Login</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name"> Nome </div>

                                <div class="profile-info-value">
                                    <span class="editable">@Model.Nome</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name"> Email </div>

                                <div class="profile-info-value">
                                    <span class="editable" id="username">@Model.Email</span>
                                </div>
                            </div>



                            <div class="profile-info-row">
                                <div class="profile-info-name"> Área </div>

                                <div class="profile-info-value">
                                    <i class="fa fa-map-marker light    -orange bigger-110"></i>
                                    <span class="editable">@Model.Departamento</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name"> Empresa </div>

                                <div class="profile-info-value">
                                    <span class="editable">@Model.Empresa</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name"> Telefone </div>

                                <div class="profile-info-value">
                                    <span id="labelTelefone">
                                        <span>@Model.Telefone</span>

                                        <span class="action-buttons">
                                            &nbsp;

                                            <a href="#" class="CustomTooltip btnAlterarValor" title="Editar" data-tipo="exibirtextbox" data-propriedade="Telefone" data-idtextbox="tboxTelefone" data-combobox="divTboxTelefone" data-label="labelTelefone">
                                                <i class="ace-icon fa fa-pencil bigger-100 dark"></i>
                                            </a>
                                        </span>
                                    </span>

                                    <div id="divTboxTelefone" class="input-group" style="display: none; float: left; padding-right: 8px; width: 100%;">
                                        <input style="font-size: 10px; height: 20px;" class="form-control text-box single-line" id="tboxTelefone" type="text" value="@Model.Telefone">

                                        <span class="input-group-btn">
                                            <button style="height: 20px" type="button" class="btn btn-success btn-sm CustomTooltip btnAlterarValor" title="Salvar" data-propriedade="Telefone" data-referencia="tboxTelefone" data-tipo="salvartextbox"></button>
                                            <button style="height: 20px" type="button" class="btn btn-danger btn-sm CustomTooltip btnCancelarAlteracao" title="Cancelar" data-combobox="divTboxTelefone" data-label="labelTelefone"></button>
                                        </span>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="space-20"></div>

                        <div class="hr hr2 hr-double"></div>

                        <div class="space-16"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="widget-box transparent">
                    <div class="widget-header widget-header-small">
                        <h4 class="widget-title blue smaller">
                            <i class="ace-icon fa fa-user-secret orange"></i>
                            Atribuições de Permissões associadas à conta
                        </h4>
                    </div>

                    <div class="widget-body">
                        <div class="widget-main padding-8">
                            <div id="profile-feed-1" class="profile-feed">
                                <div class="clearfix">
                                    <table id="tablePermissoes" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr style="background-image: linear-gradient(to bottom, #ffffff 0%, #e2e2e2 100%); font-size: 12px; height: 28px; min-height: 10px">
                                                <th><i class="ace-icon fa fa-flag orange"></i> Área</th>
                                                <th><i class="ace-icon fa fa-user orange"></i> Perfil</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (VMPermissao per in Model.Permissoes)
                                            {
                                                <tr>
                                                    <td>@per.Config</td>
                                                    <td>@per.Perfil</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Stylesheets {
    @Styles.Render("~/bundles/css_common_end")
    @Styles.Render("~/bundles/croppie_css")
}

@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
    @Scripts.Render("~/bundles/croppie_js")
    @Scripts.Render("~/bundles/js_common_end")

    <script src="~/Scripts/jQuery/inputmask.js"></script>
    <script src="~/Scripts/jQuery/jquery.inputmask.js"></script>

    @Scripts.Render("~/bundles/custom/profile")
}

@section Sliders {
    <div id="modalAtualizarFoto" class="modal fade" style="z-index: 10001">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="modalAtualizarFotoX" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="smaller lighter grey no-margin"><i class="ace-icon fa fa-random green"></i> Atualizar Foto de Perfil</h3>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div id="modalAtualizarFotoCorpoLoading" style="float: right; display: none">...Carregando <img src="~/Images/slack_loading.gif" /></div>
                            <div id="modalAtualizarFotoCorpo">
                                <div class="alert alert-info">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <i class="ace-icon fa fa-times"></i>
                                    </button>

                                    <strong>
                                        <i class="ace-icon fa fa-info-circle"></i>
                                        Mensagem:
                                    </strong>

                                    Este recurso não funciona em Internet Explorer 9 ou inferior.
                                    <br>
                                </div>

                                <div id="divFotoPerfil" class="row">
                                    <div class="col-xs-12">
                                        <div class="space-14"></div>

                                        <div id="divInputUpload" class="row">
                                            <div class="col-xs-8 col-xs-offset-2">
                                                <input type="file" id="inputUpload" accept="image/*" style="max-width: 300px" />
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-xs-offset-2">
                                                <div id="divCropie">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <span id="modalAtualizarFotoLoading" style="display: none; float: left; padding-top: 6px">
                                <img src="~/Images/slack_loading.gif" />
                            </span>

                            <button id="modalAtualizarFotoFechar" class="btn btn-sm btn-default pull-right" data-dismiss="modal">
                                <i class="ace-icon fa fa-times"></i>
                                Fechar
                            </button>

                            <button id="modalAtualizarFotoProsseguir" class="btn btn-sm btn-success" style="right: 5px; left: auto">
                                <i class="ace-icon fa fa-check"></i>
                                Atualizar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}