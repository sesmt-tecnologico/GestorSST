<div class="text-center"><h3>Atestado de Saúde Ocupacional - ASO</h3></div>

<div class="alert alert-warning">
    <strong>
        <i class="ace-icon fa fa-meh-o"></i>
        Oops!
    </strong>

    <h3>Pagina em Construção!</h3>
    <br>
</div>

<div class="row">
    <div class="col-xs-12">

        @if (ViewBag.listaASO != null)
        {

            <div>
                <table id="dynamic-table1" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Empregado</th>
                            <th>CPF</th>
                            <th>Perigo</th>
                            <th></th>

                        </tr>
                    </thead>

                    <tbody>

                        @{
                            var cpf = string.Empty;
                        }

                        @foreach (var iASO in ViewBag.listaASO)
                        {

                            if (iASO.CPF != cpf)
                            {


                                <tr>
                                    <td>@iASO.NomeEmpregado</td>
                                    <td>@iASO.CPF</td>
                                    <td>@iASO.Perigo</td>

                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">

                                        </div>

                                    </td>
                                </tr>

                                <h4>Função: @iASO.Funcao</h4>

                            }

                            cpf = iASO.CPF;


                        }

                    </tbody>
                </table>


                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Tipo de Exame</th>
                            <th>Obrigatoriedade</th>
                            <th>Exame</th>
                            <th></th>

                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var iEx in ViewBag.ListaExame)
                        {


                            <tr>
                                <td>@iEx.TipoExame</td>
                                <td>@iEx.Obrigatoriedade</td>
                                <td>@iEx.Exame</td>

                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">

                                    </div>

                                </td>
                            </tr>


                        }

                    </tbody>
                </table>
            </div>

        }




    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
    <script src="~/Scripts/Custom/Medicoes/Listagem.js"></script>
}
