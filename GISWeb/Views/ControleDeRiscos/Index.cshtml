@using GISModel.Entidades

@{
    ViewBag.Title = "Listagem de Controles";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Controles
            <a href="@Url.Action("Novo", "ControleDeRiscos")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Nova
            </a>
        </h3>
    </div>
</div>

@if (ViewBag.Controles != null && ViewBag.TotalControles > 0)
{


    <div class="row">
        <div class="col-xs-12">


            @if (ViewBag.Controles != null)
            {
                <div>
                    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="50px"></th>
                                <th >Classe do risco</th>
                                <th >Eficacia</th>
                                <th >Descrição</th>
                                <th width="89px"></th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (ControleDeRiscos iItem in ViewBag.Controles)
                            {
                                <tr id="linha-@iItem.ID">
                                    <td class="center">
                                        <label class="pos-rel">
                                            <input type="checkbox" class="ace" />
                                            <span class="lbl"></span>
                                        </label>
                                    </td>
                                    <td>@iItem.EClassificacaoDaMedia</td>
                                    <td>@iItem.EControle</td>
                                    <td>@iItem.Descricao</td>

                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">


                                            <a class="red" href="#" onclick="DeletarControle('@iItem.ID');">
                                                <i class="ace-icon fa fa-trash-o " style="font-size:24px" title="Deletar"></i>
                                            </a>
                                        </div>

                                        <div class="hidden-md hidden-lg">
                                            <div class="inline pos-rel">
                                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                                    <li>
                                                        <a href="#" class="tooltip-error" onclick="DeletarFuncao('@iItem.ID');" data-rel="tooltip" title="Delete">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-trash-o " style="font-size:24px" title="Deletar"></i>
                                                            </span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <strong>
            <i class="ace-icon fa fa-meh-o"></i>
            Oops!
        </strong>

        No momento, nenhum controle foi encontrado.
        <br>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")


    <script src="~/Scripts/Custom/ControleDoRisco/Lista.js"></script>
}