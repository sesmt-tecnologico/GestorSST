
@model GISModel.Entidades.Veiculo.MovimentacaoVeicular


@{
    ViewBag.Title = "Km Final";
}

@{
    Layout = null;
}




<div id="formEdicaoKM">
    <div class="row">
        <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable  align-center">
            <div class="page-header">
                <h1>
                    Sr. Motorista, insira o KM Final.
                    <img src="~/Images/Veiculo/trajeto2.jpg" height="60px" />
                </h1>
            </div>
        </div>
    </div>

    @if (Model == null)
    {

        <div class="alert alert-warning">
            <strong>
                <i class="ace-icon fa fa-meh-o"></i>
                Oops!
            </strong>

            Não foi possível localizar a movimentação através dessa identificação.
            <br>
        </div>


       

        <div class="center">
            <a href="javascript:history.back()" class="btn btn-grey">
                <i class="ace-icon fa fa-arrow-left"></i>
                Voltar
            </a>
        </div>
    }
    else
    {
        using (Ajax.BeginForm("Atualizar", "MovimentacaoVeicular", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAtualizarKM", OnSuccess = "OnSuccessAtualizarKM", }, new { @id = "formEdicaoKM", @class = "form-horizontal", @autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
                    <div class="form-group">                       
                        <div class="col-xs-12 col-sm-12">
                            @Html.EditorFor(d => d.KMChegada, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12", @id = "txtKMFinal" } })
                            @Html.ValidationMessageFor(d => d.KMChegada, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                            @Html.HiddenFor(d => d.UniqueKey)
                           
                        </div>
                    </div>
                </div>
                
            </div>

            

           
               

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
                    <button class="btn btn-info" id="blnSalvar" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Salvar
                    </button>
                    &nbsp;
                    <button class="btn btn-warning" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Limpar
                    </button>
                    &nbsp;
                    
                </div>
            </div>
        }
    }
</div> <!-- Fim FormQuery -->

@section Scripts {
    

}
    