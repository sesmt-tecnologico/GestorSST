@using GISModel.Entidades

@{
    ViewBag.Title = "Classificação da Medida";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Gerenciar Classificações de Medidas
            <a href="@Url.Action("Novo", "ClassificacaoMedida")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo
            </a>
        </h3>
    </div>
</div>

@if (ViewBag.Classificacao != null && ViewBag.Classificacao.Count > 0)
{

    <div class="row">
        <div class="col-xs-12">

            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Criado Em</th>
                        <th>Criado Por</th>
                        <th width="89px"></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (ClassificacaoMedida iItem in ViewBag.Classificacao)
                    {
                        <tr id="linha-@iItem.ID">
                            <td>@iItem.Nome</td>
                            <td>@iItem.DataInclusao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@iItem.UsuarioInclusao</td>
                            <td class="center">
                                <div class="action-buttons">

                                    <a class="red CustomTooltip" href="#" onclick="DeletarClassificacao('@iItem.ID');">
                                        <i class="ace-icon fa fa-trash-o bigger-125" title="Deletar"></i>
                                    </a>


                                    @*<a class="blue CustomTooltip" href="#" title="Arquivos anexados" onclick="OnClickBuscarArquivos('@iItem.UniqueKey');" data-target="#modalArquivos" data-toggle="modal" data-backdrop="static" data-keyboard="false">
                                    <i class="ace-icon fa fa-cloud blue bigger-125"></i>
                                </a>*@

                                </div>

                            </td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <strong>
            <i class="ace-icon fa fa-meh-o"></i>
            Oops!
        </strong>

        No momento, nenhuma classificação de medida foi encontrada.
        <br>
    </div>

}


@section Stylesheets {
    @Styles.Render("~/bundles/ace_css_fileUpload")
}

@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
    @Scripts.Render("~/bundles/ace_js_fileUpload")


    <script src="~/Scripts/Custom/ClassificacaoMedida/Lista.js"></script>

}