@model GISModel.Entidades.Link

@{
    ViewBag.Title = "Edição de Link";
}

<div id="formEditLink">
    <div class="row">
        <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">
            <div class="page-header">
                <h1>
                    Edição de Link
                </h1>
            </div>
        </div>
    </div>

    @using (Ajax.BeginForm("Atualizar", "Link", null, new AjaxOptions
    {
        HttpMethod = "POST",
        OnBegin = "OnBeginAtualizarLink",
        OnSuccess = "OnSuccessAtualizarLink"
    }, new { @id = "formEdicaoLink", @class = "form-horizontal", @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(a => a.UniqueKey)

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(d => d.Nome, new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                    <div class="col-xs-12 col-sm-12">
                        @Html.EditorFor(d => d.Nome, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12", @id = "txtCNPJ" } })
                        @Html.ValidationMessageFor(d => d.Nome, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(d => d.URL, new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                    <div class="col-xs-12 col-sm-12">
                        @Html.EditorFor(d => d.URL, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                        @Html.ValidationMessageFor(d => d.URL, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
            <button class="btn btn-info" id="btnSalvar" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Salvar
            </button>
            &nbsp;
            <button class="btn btn-warning" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Limpar
            </button>
            &nbsp;
            <a class="btn" href="javascript:history.back()">
                <i class="ace-icon fa fa-arrow-left"></i>
                Voltar
            </a>
        </div>
    }

</div>

@section Scripts {
    <script src="~/Scripts/Custom/Link/Edicao.js"></script>
}