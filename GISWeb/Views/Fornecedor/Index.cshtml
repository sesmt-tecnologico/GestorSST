@using GISModel.Entidades

@{
    ViewBag.Title = "Listagem de Fornecedores";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Fornecedor
            <a href="@Url.Action("Novo", "Fornecedor")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

        @{
            Html.RenderPartial("_MensagensDeRetorno");
        }

        @if (ViewBag.Fornecedor != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="50px"></th>
                            <th>CNPJ</th>
                            <th>Nome Fantasia</th>
                            <th width="100px"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (Fornecedor iFornecedor in ViewBag.Fornecedor)
                        {
                            <tr id="linha-@iFornecedor.ID">
                                <td class="center">
                                    <label class="pos-rel">
                                        <input type="checkbox" class="ace" />
                                        <span class="lbl"></span>
                                    </label>
                                </td>
                                <td>@iFornecedor.CNPJ</td>
                                <td>@iFornecedor.NomeFantasia</td>



                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">

                                        <a href='@Url.Action("Edicao", "Fornecedor", new { id = @iFornecedor.ID })' class="green">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                        <a class="red" href="#" onclick="DeletarFornecedor('@iFornecedor.ID','@iFornecedor.NomeFantasia');">
                                            <i class="ace-icon fa fa-trash-o" style="font-size:24px;color:red" title="Excluir Fornecedor"></i>
                                        </a>
                                    </div>
                                        <div class="hidden-md hidden-lg">
                                            <div class="inline pos-rel">
                                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                                    <li>
                                                        <a href='@Url.Action("Edicao", "Fornecedor", new { id = @iFornecedor.ID })' class="green">
                                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                        </a>
                                                        <a href="#" class="tooltip-error" onclick="DeletarFornecedor('@iFornecedor.ID','@iFornecedor.NomeFantasia');" data-rel="tooltip" title="Excluir Fornecedor">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")

    <script src="~/Scripts/Custom/Fornecedor/Lista.js"></script>

    <script src="~/Scripts/Custom/Fornecedor/Excluir.js"></script>

}
