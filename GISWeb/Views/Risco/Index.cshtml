@using GISModel.Entidades

@{
    ViewBag.Title = "Listagem de Riscos";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Risco
            <a href="@Url.Action("Novo", "Risco")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo 
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">


        @if (ViewBag.Risco != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">

                    <thead>
                        <tr>
                            <th class="center">
                                <label class="pos-rel">
                                    <input type="checkbox" class="ace" />
                                    <span class="lbl"></span>
                                </label>
                            </th>
                            <th>Risco</th>
                            <th width="89px"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (Risco iRisco in ViewBag.Risco)
                        {
                            <tr id="linha-@iRisco.ID">
                                <td class="center" width="60">
                                    <label class="pos-rel">
                                        <input type="checkbox" class="ace" />
                                        <span class="lbl"></span>
                                    </label>
                                </td>

                                <td>@iRisco.Nome</td>


                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        <a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>

                                        <a href='@Url.Action("Edicao", "Risco", new { id = iRisco.ID })' class="green">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a href="#" class="tooltip-error" onclick="DeletarRisco('@iRisco.ID', '@iRisco.Nome');" data-rel="tooltip" title="Delete">
                                            <span class="red">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </span>
                                        </a>

                                        @*<a class="red" href="@Url.Action("Excluir", "TipoDeRisco", new { id = @iRisco.IDTipoDeRisco })">
                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                            </a>*@
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                <li>
                                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                        <span class="blue">
                                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    @Html.ActionLink("Hello", "Edicao", "Risco", new { i = "123" }, null)
                                                    <a href='@Url.Action("Edicao", "Risco")' class="tooltip-success" data-rel="tooltip" title="Edit">
                                                        <span class="green">
                                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        }



    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jQ_dataTable")


    <script src="~/Scripts/Custom/Risco/Listagem.js"></script>
}




