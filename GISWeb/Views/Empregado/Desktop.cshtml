@model Empregado
@using GISModel.Entidades


@if (Model == null)
{
    <div class="alert alert-warning">
        <strong>
            <i class="ace-icon fa fa-meh-o"></i>
            Oops!
        </strong>

        Nenhum empregado localizado na base de dados.
        <br>
    </div>
}
else
{
    <div class="row content">
        <div class="col-sm-12 col-xs-12 text-left">

            <div id="user-profile-1" class="user-profile row" style="margin: 0">
                <div class="col-xs-12 col-sm-3" style="padding: 0">
                    <div>
                        <div class="space-6"></div>

                        <div class="center">

                            <div class="profile-picture" style="background-color: #82af6f">
                                <span class="CustomTooltip label label-success" title="Admitido e alocado em 1 ou mais contratos, com todas alocações aprovadas.">
                                    <b>LIBERADO</b>
                                </span>

                                <ul class="ace-thumbnails clearfix">
                                    <li>
                                        <a href="#" class="lnkAtualizarFotoPortfolio" data-target="#modalAtualizarFoto" data-toggle="modal" data-backdrop="static" data-keyboard="false">
                                            <img id="imagemPortfolio" class="editable img-responsive" src="@Url.Action("FotoPerfil", "Empregado", new { login = Model.CPF })">

                                            <div class="text">
                                                <div class="inner">Clique para atualizar</div>
                                            </div>
                                        </a>
                                        <div class="tools tools-bottom">
                                            <a href="#">
                                                <i class="ace-icon fa fa-times red"></i>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>


                    </div>
                </div>

                <div class="col-xs-12 col-sm-9" style="padding: 0">
                    <div class="space-4"></div>

                    <div class="profile-user-info">
                        <div class="profile-info-row">
                            <div class="profile-info-name"> Nome </div>

                            <div class="profile-info-value">
                                <span id="labelNomeCompleto">
                                    <span style="font-weight: 700">
                                        @Model.Nome

                                        <input type="hidden" id="UKEmp" value="@Model.UniqueKey.ToString()" />
                                    </span>

                                    <span class="action-buttons">
                                        &nbsp;

                                        <a href="#" class="CustomTooltip btnAlterarValor" title="Editar" data-tipo="exibirtextbox" data-combobox="divTboxNomeCompleto" data-label="labelNomeCompleto">
                                            <i class="ace-icon fa fa-pencil bigger-100 dark"></i>
                                        </a>
                                    </span>
                                </span>

                                <div id="divTboxNomeCompleto" class="input-group" style="width: 300px; float: left; display: none">
                                    <input style="height: 20px; font-size: 10px;" class="form-control text-box single-line" id="tboxNomeCompleto" type="text" value="JOAO EXEMPLO">

                                    <span class="input-group-btn">
                                        <button style="height: 20px" type="button" class="btn btn-success btn-sm CustomTooltip btnAlterarValor" title="Salvar" data-propriedade="NomeCompleto" data-referencia="tboxNomeCompleto" data-tipo="salvartextbox"></button>
                                        <button style="height: 20px" type="button" class="btn btn-danger btn-sm CustomTooltip btnCancelarAlteracao" title="Cancelar" data-combobox="divTboxNomeCompleto" data-label="labelNomeCompleto"></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="profile-info-row">
                            <div class="profile-info-name"> CPF </div>

                            <div class="profile-info-value">
                                <span id="labelCPF">
                                    <input type="hidden" id="txtCPF" value="@Model.CPF" />
                                    <span style="font-weight: 700">@Model.CPF</span>

                                    <span class="action-buttons">
                                        &nbsp;

                                        <a href="#" class="CustomTooltip btnAlterarValor" title="Editar" data-tipo="exibirtextbox" data-combobox="divTboxCPF" data-label="labelCPF">
                                            <i class="ace-icon fa fa-pencil bigger-100 dark"></i>
                                        </a>
                                    </span>
                                </span>

                                <div id="divTboxCPF" class="input-group" style="width: 200px; float: left; display: none">
                                    <input style="height: 20px; font-size: 10px;" class="form-control text-box single-line" id="tboxCPF" type="text" value="067.283.646-76">

                                    <span class="input-group-btn">
                                        <button style="height: 20px" type="button" class="btn btn-success btn-sm CustomTooltip btnAlterarValor" title="Salvar" data-propriedade="CPF" data-referencia="tboxCPF" data-tipo="salvartextbox"></button>
                                        <button style="height: 20px" type="button" class="btn btn-danger btn-sm CustomTooltip btnCancelarAlteracao" title="Cancelar" data-combobox="divTboxCPF" data-label="labelCPF"></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="profile-info-row">
                            <div class="profile-info-name"> Nascimento </div>

                            <div class="profile-info-value">
                                <span id="labelNascimento">
                                    <span>@Model.DataNascimento</span>
                                    <span style="font-size: 10px" class="hidden-480"> — (@GISHelpers.Utils.Severino.CalculaIdade(Model.DataNascimento))</span>

                                    <span class="action-buttons">
                                        &nbsp;

                                        <a href="#" class="CustomTooltip btnAlterarValor" title="Editar" data-tipo="exibirtextbox" data-combobox="divTboxNascimento" data-label="labelNascimento">
                                            <i class="ace-icon fa fa-pencil bigger-100 dark"></i>
                                        </a>
                                    </span>
                                </span>

                                <div id="divTboxNascimento" class="input-group" style="width: 200px; float: left; display: none">
                                    <input style="height: 20px; font-size: 10px" class="form-control date-picker text-box single-line" id="tboxNascimento" type="text" value="01/01/2017">

                                    <span class="input-group-btn">
                                        <button style="height: 20px" type="button" class="btn btn-success btn-sm CustomTooltip btnAlterarValor" title="Salvar" data-propriedade="DataNascimento" data-referencia="tboxNascimento" data-tipo="salvartextbox"></button>
                                        <button style="height: 20px" type="button" class="btn btn-danger btn-sm CustomTooltip btnCancelarAlteracao" title="Cancelar" data-combobox="divTboxNascimento" data-label="labelNascimento"></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="profile-info-row" style="font-size: 10px; line-height: 0.7">
                            <div class="profile-info-name"> Email </div>

                            <div class="profile-info-value">
                                <span id="labelEmail">
                                    @Model.Email

                                    <span class="action-buttons">
                                        &nbsp;

                                        <a href="#" class="CustomTooltip btnAlterarValor" title="Editar" data-tipo="exibirtextbox" data-combobox="divTboxEmail" data-label="labelEmail">
                                            <i class="ace-icon fa fa-pencil bigger-100 dark"></i>
                                        </a>
                                    </span>
                                </span>

                                <div id="divTboxEmail" class="input-group" style="width: 200px; float: left; display: none">
                                    <input style="height: 20px; font-size: 10px;" class="form-control text-box single-line" id="tboxEmail" type="text" value="joaoexemplo@cemig.com.br">

                                    <span class="input-group-btn">
                                        <button style="height: 20px" type="button" class="btn btn-success btn-sm CustomTooltip btnAlterarValor" title="Salvar" data-propriedade="Email" data-referencia="tboxEmail" data-tipo="salvartextbox"></button>
                                        <button style="height: 20px" type="button" class="btn btn-danger btn-sm CustomTooltip btnCancelarAlteracao" title="Cancelar" data-combobox="divTboxEmail" data-label="labelEmail"></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="profile-info-row" style="font-size: 10px; line-height: 0.7">
                            <div class="profile-info-name"> Telefone </div>

                            <div class="profile-info-value">
                                <span id="labelTelefone">


                                    <span class="action-buttons">
                                        &nbsp;

                                        <a href="#" class="CustomTooltip btnAlterarValor" title="Editar" data-tipo="exibirtextbox" data-combobox="divTboxTelefone" data-label="labelTelefone">
                                            <i class="ace-icon fa fa-pencil bigger-100 dark"></i>
                                        </a>
                                    </span>
                                </span>

                                <div id="divTboxTelefone" class="input-group" style="width: 200px; float: left; display: none">
                                    <input style="height: 20px; font-size: 10px" class="form-control text-box single-line" id="tboxTelefone" type="text" value="">

                                    <span class="input-group-btn">
                                        <button style="height: 20px" type="button" class="btn btn-success btn-sm CustomTooltip btnAlterarValor" title="Salvar" data-propriedade="Telefone" data-referencia="tboxTelefone" data-tipo="salvartextbox"></button>
                                        <button style="height: 20px" type="button" class="btn btn-danger btn-sm CustomTooltip btnCancelarAlteracao" title="Cancelar" data-combobox="divTboxTelefone" data-label="labelTelefone"></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="profile-info-row" style="font-size: 10px; line-height: 0.7">
                            <div class="profile-info-name"> Cadastrado em </div>

                            <div class="profile-info-value">
                                <span class="editable" id="signup">@Model.DataInclusao.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                        </div>

                    </div>

                    <div class="space-20"></div>

                </div>
            </div>

        </div>
    </div>

    <div class="space-20"></div>

    <div class="row">
        @*<div class="col-sm-6 col-xs-12">
                <a href="@Url.Action("Index", "Ged", new { id = ViewBag.UKEmp })" class="btn btn-xs btn-primary btn-block">
                    <i class="ace-icon fa fa-fire bigger-110"></i>
                    <span class="bigger-110 no-text-shadow">Documentação</span>
                </a>
            </div>

            <div class="col-sm-6 col-xs-12">
                <a href="@Url.Action("Perfil", "Empregado", new { id = ViewBag.UKEmp })" class="btn btn-xs btn-danger btn-block">
                    <i class="ace-icon fa fa-bolt bigger-110"></i>

                    Riscos
                </a>
            </div>*@

        <div class="col-sm-6 col-xs-12">
            <a href="@Url.Action("Index", "AnaliseDeRisco")" class="btn btn-xs btn-danger btn-block">
                <i class="ace-icon fa fa-bolt bigger-110"></i>
                Análise de Riscos
            </a>
        </div>
        <div class="col-sm-6 col-xs-12">
            <a href="@Url.Action("Registros", "AnaliseDeRisco")" class="btn btn-xs btn-info2 btn-block">
                <i class="ace-icon fa fa-file-archive-o bigger-110"></i>
                Pesquisa Análises de Risco
            </a>
        </div>

    </div>
    <br/>


    <div class="row">       

        <div class="col-sm-6 col-xs-12">
            <a href="@Url.Action("Index", "MovimentacaoVeicular")" class="btn btn-xs btn-success btn-block">
                <i class="ace-icon fa fa-car bigger-110"></i>
                Controle de Movimentação Veicular
            </a>
        </div>
        <div class="col-sm-6 col-xs-12">
            <a href="@Url.Action("Index","ChecklistVeicular")" class="btn btn-xs btn-yellow btn-block">
                <i class="ace-icon fa fa-search bigger-110"></i>
                CheckList Diário para veículos
            </a>
        </div>

    </div>

}


@section Stylesheets {
    @Styles.Render("~/bundles/croppie_css")
}

@section Scripts {
    <script src="~/Scripts/Ace/ace.widget-box.js"></script>
    @Scripts.Render("~/bundles/jQ_dataTable")
    @Scripts.Render("~/bundles/croppie_js")
    <script src="~/Scripts/Ace/jQ/jquery.maskedinput.js"></script>
    @Scripts.Render("~/bundles/custom/profile")
    <script src="~/Scripts/Ace/jQ/jquery.nestable.js"></script>
    <script src="~/Scripts/Custom/Empregado/Perfil.js"></script>
}



@section Sliders {

    <div id="modalAtualizarFoto" class="modal fade" style="z-index: 10001">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="modalAtualizarFotoX" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="smaller lighter grey no-margin"><i class="ace-icon fa fa-random green"></i> Atualizar Foto de Perfil</h3>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div id="modalAtualizarFotoCorpoLoading" style="float: right; display: none">...Carregando <img src="~/Images/slack_loading.GIF" width="28px" /></div>
                            <div id="modalAtualizarFotoCorpo">
                                

                                <div id="divFotoPerfil" class="row">
                                    <div class="col-xs-12">
                                        <div class="space-14"></div>

                                        <div id="divInputUpload" class="row">
                                            <div class="col-xs-8 col-xs-offset-2">
                                                <input type="file" id="inputUpload" accept="image/*" style="max-width: 300px" />
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-xs-offset-2">
                                                <div id="divCropie">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <span id="modalAtualizarFotoLoading" style="display: none; float: left; padding-top: 6px">
                                <img src="~/Images/slack_loading.GIF" width="28px" />
                            </span>

                            <button id="modalAtualizarFotoFechar" class="btn btn-sm btn-default pull-right" data-dismiss="modal">
                                <i class="ace-icon fa fa-times"></i>
                                Fechar
                            </button>

                            <button id="modalAtualizarFotoProsseguir" class="btn btn-sm btn-success" style="right: 5px; left: auto">
                                <i class="ace-icon fa fa-check"></i>
                                Atualizar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
