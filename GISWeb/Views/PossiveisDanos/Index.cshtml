@using GISModel.Entidades

@{
    ViewBag.Title = "Listagem de Possiveis Danos";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Possíveis Danos
            <a href="@Url.Action("Novo", "PossiveisDanos")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo
            </a>
        </h3>
    </div>
</div>
@if (ViewBag.PossiveisDanos != null && ViewBag.PossiveisDanos.Count > 0)
{

    <div class="row">
        <div class="col-xs-12">

            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Descrição do Possível Dano</th>
                        <th>Criado por</th>
                        <th>Criado em</th>
                        <th width="89px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PossiveisDanos iPossivelDano in ViewBag.PossiveisDanos)
                    {
                        <tr id="linha-@iPossivelDano.ID">
                            <td>@iPossivelDano.DescricaoDanos</td>
                            <td>@iPossivelDano.UsuarioInclusao</td>
                            <td>@iPossivelDano.DataInclusao.ToString("dd/MM/yyyy")</td>
                            <td class="center">
                                <div class="hidden-sm hidden-xs action-buttons">
                                    <a href='@Url.Action("Edicao", "PossiveisDanos", new { id = @iPossivelDano.UniqueKey })' class="green">
                                        <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a>

                                    <a href="#" class="tooltip-error" onclick="DeletarPossiveisDanos('@iPossivelDano.UniqueKey', '@iPossivelDano.DescricaoDanos'); return false;" data-rel="tooltip" title="Delete">
                                        <span class="red">
                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                        </span>
                                    </a>
                                </div>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>
    </div>
}
else
{

    <div class="alert alert-warning">
        <strong>
            <i class="ace-icon fa fa-meh-o"></i>
            Oops!
        </strong>

        No momento, nenhum possivel dano a saúde foi encontrado.
        <br>
    </div>

}






@section Scripts {

    @Scripts.Render("~/bundles/jQ_dataTable")


    <script src="~/Scripts/Custom/PossiveisDanos/Listagem.js"></script>

}




