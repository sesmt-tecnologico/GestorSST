@using GISModel.Entidades

@{
    ViewBag.Title = "Consulta Medições";
}

<div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">
                Exames
                <a href="@Url.Action("Novo", "Exames")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                    <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                    Novo Exame
                </a>
            </h3>
        </div>
    </div>
<div class="text-center"><h3>Exames</h3></div>



<div class="row">
    <div class="col-xs-12">

        @if (ViewBag.Exames.Count > 0)
        {



            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Exame</th>

                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var iExames in ViewBag.Exames)
                        {

                            @*<tr id="linha-@iEmpregado.AdmissaoID">*@
                            <tr>
                                <td>@iExames.Nome</td>


                                
                            </tr>





                        }

                    </tbody>
                </table>
            </div>

        }
        else
        {
            <div class="alert alert-warning">
                <strong>
                    <i class="ace-icon fa fa-meh-o"></i>
                    Oops!
                </strong>

                Nenhum exame encontrado na base de dados.
                <br>
            </div>
        }




            @section Scripts {
                @Scripts.Render("~/bundles/jQ_dataTable")
                <script src="~/Scripts/Custom/Exames/Listagem.js"></script>
            }
