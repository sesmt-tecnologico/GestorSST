@using GISModel.Entidades



@{
    ViewBag.Title = "Lista de Plano de Ação";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Plano de Ação
            @*<a href="@Url.Action("Novo", "PlanoDeAcao")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                    <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                    Novo Plano de Ação
                </a>*@
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
       

        @if (Model != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">

                    <thead>
                        <tr>                           
                           
                            <th>Responsável</th>
                            <th>Descrição da Atividade</th>                           
                           
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (PlanoDeAcao iPlanoDeAcao in ViewBag.PlanoDeAcao)
                        {


                            <tr>                               
                                 <td>@iPlanoDeAcao.Responsavel</td>  
                                <td>@iPlanoDeAcao.DescricaoDoPlanoDeAcao</td>
                                
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        }



    </div>
</div>





