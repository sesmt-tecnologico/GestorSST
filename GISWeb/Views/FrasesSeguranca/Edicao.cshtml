@model GISModel.Entidades.FrasesSeguranca


@{
    ViewBag.Title = "Edicao";
}


<div id="formEdicaoFrases">
    <div class="row">
        <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">
            <div class="page-header">
                <h1>
                    Editar Frases
                </h1>
            </div>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="error-container">
            <div class="well">
                <h1 class="grey lighter smaller">
                    <span class="blue bigger-125">
                        <i class="ace-icon fa fa-exclamation-triangle"></i>
                        Oops
                    </span>
                    Não foi possível encontrar a Frase. verifique se a mesma está ativa.
                </h1>

                <hr />
                <div class="space"></div>

                <div class="center">
                    <a href="javascript:history.back()" class="btn btn-grey">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        Voltar
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        using (Ajax.BeginForm("Atualizar", "FrasesSeguranca", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAtualizarFrases", OnSuccess = "OnSuccessCadastrarFrases", }, new { @id = "formEdicaoFrases", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
            <div class="col-xs-12 col-sm-12">
                @Html.EnumDropDownListFor(model => model.Categoria, "Selecione...", new { @class = "chosen-select form-control tag-input-style", @id = "ddlPerigo", @autocomplete = "on" })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12">
        <div class="form-group">
            @Html.LabelFor(d => d.Descricao, new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
            <div class="col-xs-12 col-sm-12">
                @Html.EditorFor(d => d.Descricao, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12", @id = "" } })
                @Html.ValidationMessageFor(d => d.Descricao, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                @Html.HiddenFor(d => d.ID)
                @Html.HiddenFor(d => d.UniqueKey)
            </div>
        </div>
    </div>
    
</div>


            <div class="row">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Salvar
                    </button>
                    &nbsp;
                    <button class="btn btn-warning" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Limpar
                    </button>
                    &nbsp;
                    <a class="btn" href="javascript:history.back()">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        Voltar
                    </a>
                </div>
            </div>
        }
    }



</div> <!-- Fim Form -->
@section Scripts {


    <script src="~/Scripts/Custom/Frases/Edicao.js"></script>

}
