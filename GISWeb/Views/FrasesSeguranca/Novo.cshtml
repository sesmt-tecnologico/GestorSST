@model GISModel.Entidades.FrasesSeguranca




@{
    ViewBag.Title = "Frases de Segurança";
}

<div id="formCadastroFrases">
    <div class="row">
        <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">
            <div class="page-header">
                <h1>
                    Frases
                </h1>
            </div>
        </div>
    </div>
    @{
        Html.RenderPartial("_MensagensDeRetorno");
    }


    <div>
        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <tbody>
                <tr id="linha">

                    <td>
                        @using (Ajax.BeginForm("Cadastrar", "FrasesSeguranca", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginCadastrarFrasesSeguranca", OnSuccess = "OnSuccessCadastrarFrasesSeguranca", }, new { @id = "formCadastroFrases", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()


                            <div class="row">

                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "form-field-select-3 col-xs-12 col-sm-12 no-padding-right" })
                                        <div class="col-xs-12 col-sm-12">
                                            @Html.EnumDropDownListFor(model => model.Categoria, "Selecione...", new { @class = "chosen-select form-control tag-input-style", @id = "ddlPerigo", @autocomplete = "on" })
                                            @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.Descricao, new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                                        <div class="col-xs-12 col-sm-12">
                                            @Html.EditorFor(d => d.Descricao, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12", @id = "", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(d => d.Descricao, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />


                            <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
                                <button class="btn btn-info" id="btnSalvar" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Salvar
                                </button>

                            </div>

                        }
                    </td>
                </tr>


            </tbody>
        </table>
    </div>


</div>


@section Scripts {



    <script src="~/Scripts/Custom/Frases/Novo.js"></script>


}

