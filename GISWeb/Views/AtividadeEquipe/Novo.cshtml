@using GISModel.Entidades
@model Atividade



@{
    ViewBag.Title = "Cadastro de Atividades";
}


<div id="formCadastroAtividade">
    <div class="row">
        <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable">
            <div class="page-header">
                <h1>
                    Cadastro de Atividades
                    <a href="@Url.Action("Index", "AtividadeEquipe")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                        <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                        Lista Atividades
                    </a>
                </h1>
            </div>
        </div>
    </div>

    @using (Ajax.BeginForm("Cadastrar", "AtividadeEquipe", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginCadastrarAtividade", OnSuccess = "OnSucessCadastrarAtividade" }, new { @id = "formCadastroAtividade", @class = "form-horizontal", @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">

            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    @Html.Label("Equipe", new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                    <div class="col-xs-12 col-sm-12">
                        @Html.DropDownList("oEquipe", new SelectList(ViewBag.Equipe, "UniqueKey", "NomeDaEquipe"), "Selecione uma Equipe", new { @class = "chosen-select form-control tag-input-style", @id = "ddlContrato", @autocomplete = "on" })
                        @Html.ValidationMessage("oEquipe", string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                        <input type="text" name="EmpID" id="EmpID" value=@ViewBag.UKEmpresa hidden />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(d => d.Codigo, new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                    <div class="col-xs-12 col-sm-12">
                        @Html.EditorFor(d => d.Codigo, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                        @Html.ValidationMessageFor(d => d.Codigo, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(d => d.Descricao, new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                    <div class="col-xs-12 col-sm-12">
                        @Html.EditorFor(d => d.Descricao, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                        @Html.ValidationMessageFor(d => d.Descricao, string.Empty, new { @style = "font-size: 10px; color: #a94442;" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
            <button class="btn btn-info" id="btnSalvar" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Salvar
            </button>
            &nbsp;
            <button class="btn btn-warning" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Limpar
            </button>
            &nbsp;
            <a class="btn" href="javascript:history.back()">
                <i class="ace-icon fa fa-arrow-left"></i>
                Voltar
            </a>
        </div>


    }


</div>

@section Scripts {

    <script src="~/Scripts/Custom/AtividadeEquipe/Novo.js"></script>
   
}