@model GISModel.DTO.Estabelecimento.PesquisaEstabelecimentoViewModel



@{
    ViewBag.Title = "Listagem de Estabelcimentos";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Estabelecimento
           

            <a href="@Url.Action("Novo", "Estabelecimento")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px; margin-right: 20px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo
            </a>
        </h3>
    </div>
</div>

@using (Ajax.BeginForm("PesquisarEstabelecimento", "Estabelecimento", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginPesquisarEstabelecimento", OnSuccess = "OnSuccessPesquisarEstabelecimento" }, new { @id = "formPesquisarEstabelecimento", @class = "form-horizontal", @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                @Html.Label("Pesquisar", new { @class = "form-field-select-3 col-xs-12 col-sm-6 no-padding-right" })
                <div class="col-xs-12 col-sm-12">
                    @*@Html.ListBoxFor(d => d.Departamento, new SelectList(ViewBag.Departamentos, "UniqueKey", "Sigla"), new { @class = "chosen-select form-control", @data_placeholder = "Selecione pelo menos um departamento" })*@
                    @Html.DropDownListFor(d => d.IDEstabelecimento, new SelectList(ViewBag.Estabelecimento, "UniqueKey", "NomeCompleto"), "Selecione ...", new { @class = "chosen-select form-control tag-input-style ddPesquisar", @autocomplete = "on" })
                </div>
            </div>
        </div>

    </div>


}

<div class="resultadoEstabelecimento">

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")

    <script src="~/Scripts/Custom/Estabelecimento/Listagem.js"></script>
}
